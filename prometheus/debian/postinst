#!/bin/sh
# postinst script for prometheus
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)


    if ! dpkg-statoverride --list /var/lib/prometheus >/dev/null ; then
        chown prometheus:prometheus /var/lib/prometheus
    fi

    if ! dpkg-statoverride --list /etc/prometheus/* >/dev/null ; then
        chown prometheus:prometheus /etc/prometheus
    fi
    
    mkdir -p /usr/share/prometheus/web/static/vendor/bootstrap4-glyphicons/fonts
    ln -s /usr/share/fonts-glyphicons /usr/share/prometheus/web/static/vendor/bootstrap4-glyphicons/fonts/glyphicons
    ln -s /usr/share/javascript/bootstrap4 /usr/share/prometheus/web/static/bootstrap4
    ln -s /usr/share/javascript/d3 /usr/share/prometheus/web/static/d3
    ln -s /usr/share/javascript/eonasdan-bootstrap-datetimepicker /usr/share/prometheus/web/static/eonasdan-bootstrap-datetimepicker
    ln -s /usr/share/javascript/jquery /usr/share/prometheus/web/static/jquery
    ln -s /usr/share/javascript/jquery-hotkeys /usr/share/prometheus/web/static/jquery-hotkeys
    ln -s /usr/share/javascript/moment /usr/share/prometheus/web/static/moment
    ln -s /usr/share/javascript/moment-timezone /usr/share/prometheus/web/static/moment-timezone
    ln -s /usr/share/javascript/mustache /usr/share/prometheus/web/static/mustache
    ln -s /usr/share/javascript/popper.js /usr/share/prometheus/web/static/popper.js
    ln -s /usr/share/javascript/rickshaw /usr/share/prometheus/web/static/rickshaw

#    chmod 2750 /var/log/prometheus
#    chmod 2755 /usr/bin/prometheus
#    chmod 2755 /usr/bin/promtool
#    chmod 2775 /var/lib/prometheus
#    chown -R :prometheus /usr/bin/prometheus
#    chown -R :prometheus /usr/bin/promtool
#    chown -R :prometheus /var/log/prometheus
#    chown -R :prometheus /var/lib/prometheus

#    systemctl restart prometheus
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument '$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
